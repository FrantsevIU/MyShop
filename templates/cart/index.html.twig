{% extends 'base.html.twig' %}

{% block body %}
    {% set cent = 0 %}
    {% set item = 0 %}
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">

                            <div class="row">

                                <div class="col-lg-7">
                                    <h5 class="mb-3"><a href="{{path('shopList')}}" class="text-body"><i
                                                    class="fas fa-long-arrow-alt-left me-2"></i>  Continue shopping</a></h5>
                                    <hr>

                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-1">Shopping cart</p>

                                        </div>
                                        <div>
                                            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!"
                                                                                                        class="text-body">price <i class="fas fa-angle-down mt-1"></i></a></p>
                                        </div>
                                    </div>
{#                                    {{ dump(cartItem)}}#}
                                    {% for items in cartItem %}
                                        {{ dump(items) }}
                                        <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex flex-row align-items-center">
                                                    <div>
                                                        <img
                                                                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp"
                                                                class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                                    </div>
                                                    <div class="ms-3">
                                                        <h5>Iphone 11 pro</h5>
                                                        <p class="small mb-0">256GB, Navy Blue</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-row align-items-center">
                                                    <div style="width: 50px;">
                                                        <h5 class="fw-normal mb-0">{{ items.count |trans|nl2br }}</h5>
                                                    </div>
                                                    <div style="width: 80px;">
                                                        <h5 class="mb-0">${{ items.product.price*items.count |trans|nl2br }}</h5>
                                                    </div>
                                                    <a href="{{ path('dellItem',{'id':items.Id}) }}" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        {% set cent = cent+items.product.price*items.count %}
                                           {% set item = item+items.count %}
                                    {% endfor %}
                                    <hr>
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="mb-0">You have <b>{{ item }}</b> items in your cart</p>
                                        <p class="mb-0">Total price: <b>${{ cent }}</b> </p>
                                    <div class="col-lg-7">
                                        <h5 class="mb-4"><a href="{{ path('clear') }}" class="text- body">Clear cart</a></h5>

                                    </div>
                                        <h5 class="mb-4"><a href="{{ path('orderCart') }}" class="text- body">Order</a></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}

